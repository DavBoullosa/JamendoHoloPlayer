<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="JamendoTitle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/jamendotheme_color</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">@dimen/littlespace</item>
    </style>

    <style name="h2TitleDark">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/almostblack</item>
    </style>

    <style name="h1TitleDarkItalicLight">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/almostblack</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="h3TitleDark">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sweetgray</item>
    </style>

    <style name="meta">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/sweetgray</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/jamendotheme_color</item>
    </style>

    <style name="PagerTabStripTextNoBackground">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tag">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/verylightgray</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@color/jamendotheme_color</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
    </style>

</resources>
